<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CircleImageAll" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="CircleImage12" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12dp</item>
    </style>

    <style name="MyToolbar" parent="Theme.MaterialComponents.NoActionBar">
        <item name="textAppearanceLargePopupMenu">@style/largePopupMenu</item>
        <item name="android:textAppearanceLargePopupMenu">@style/largePopupMenu</item>
        <item name="colorControlNormal">@color/primaryTextColor</item>
        <item name="textAppearanceSmallPopupMenu">@style/smallPopupMenu</item>
        <item name="android:textAppearanceSmallPopupMenu">@style/smallPopupMenu</item>
        <item name="popupMenuBackground">@drawable/custom_popup_menu_background</item>
    </style>

    <style name="largePopupMenu" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="smallPopupMenu" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="MyOutlineBox" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/primaryColor</item>
        <item name="android:textColorHint">@color/primaryTextColor</item>
        <item name="colorSurface">@color/black</item>
    </style>

    <style name="Expanded" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textColor">@android:color/transparent</item>

    </style>

    <style name="Collapsed" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>
</resources>